<configuration>
    <appender name="FILE_INFO" class="ch.qos.logback.core.FileAppender">
        <file>__LOG_PATH__</file>
        <encoder>
            <pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} %p [%c{1}] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http" level="INFO"/>

    <root level="info">
        <appender-ref ref="FILE_INFO" />
    </root>
</configuration>